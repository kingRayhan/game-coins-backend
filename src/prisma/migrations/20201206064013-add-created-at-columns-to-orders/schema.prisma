datasource db {
  provider = "postgres"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
}

model Game {
  id        String   @id @default(uuid())
  title     String
  slug      String?  @unique
  thumbnail String?
  cover     String?
  body      String
  coins     Coin[]
  createdAt DateTime @default(now())
}

model Coin {
  id     String  @id @default(uuid())
  label  String
  price  Float
  Game   Game?   @relation(fields: [gameId], references: [id])
  gameId String?
  Order  Order[]
}

model Order {
  id            String   @id @default(uuid())
  customerName  String
  customerEmail String
  paymentStatus Boolean  @default(false)
  coin          Coin?    @relation(fields: [coinId], references: [id])
  coinId        String?
  createdAt     DateTime @default(now())
}
